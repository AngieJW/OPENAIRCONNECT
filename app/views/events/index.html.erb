<main id="event_index">

<div class="container-fluid">
  <ul class="row d-flex justify-content-start p-4 g-2">
  <% @events.each do |event| %>
    <li class="card card_openair <%= 'owner_event' if event.user == current_user %> col-xs-12 col-lg-6 p-3">
    <div class="row">
      <%= image_tag('PrisonMick.jpg', class: 'col-xs-12 col-md-4') %>
      <div class="card-body card-event-stats col-xs-12 col-md-8">
      <%= event.meeting_date.strftime('%A %B %Y') %>
      Organisé par <%= event.user.first_name %> <%= '(Vous)' if event.user == current_user %>
      <%= link_to 'détails', event_path(event), class: "btn btn-success" %>
      </div>
    </div>
    </li>
  <% end %>

  </ul>
</div>

</main>
