<section id="event_index" data-controller="cards">

<div class="container">
  <ul class="row d-flex justify-content-start p-4 g-2" data-cards-target="list_cards">
  <% @events.each do |event| %>
    <li class="card card_openair <%= 'owner_event' if event.user == current_user %> col-xs-12 col-lg-6 p-3" data-cards-target="card">
      <%= link_to (event_path(event)), class: 'anchor_card d-flex p-3' do %>
        <div class="row">
          <%= image_tag('randonnee_map_1.jpg', class: 'col-xs-12 col-md-4') %>
          <div class="card-event-stats d-flex justify-content-between flex-column col-xs-12 col-md-8 p-2">
            <div class="d-flex justify-content-between">
              <span><%= event.location %></span>
              <span><%= event.difficulty %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span><strong><%= event.meeting_date.strftime('%d/%m/%Y') %></strong></span>
              <span><i class="fa-solid fa-user"></i> <%= event.user.first_name %> <% if event.user == current_user %><strong>(Vous)</strong> <% end %></span>
            </div>
          </div>
        </div>
      <% end %>
    </li>
  <% end %>

  </ul>
</div>

</section>
