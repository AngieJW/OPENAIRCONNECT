<div class="container-fluid">
  <h1>Packing list</h1>

  <div class="form-check">
    <%= form_with url: "/update_all", method: :patch do |f| %>
      <% @items.each do |item| %>
        <%= item.quantity %>
        <label for="<%= item.id %>"><%= item.name %></label>
        <input type="checkbox" id="item_ids_<%= item.id %>" name="item_ids[]" value="<%= item.id %>">
      <% end %>
      <br>
      <%= f.submit "clique" %>
    <% end %>
  </div>

</div>
