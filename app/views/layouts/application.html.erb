<% I18n.default_locale || :en %>

<!DOCTYPE html>
<html>
  <head>
    <title>OPENAIRCONNECT</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=geometry&key=#{ENV['GOOGLE_API_SERVER_KEY']}&callback=Function.prototype" %>
  </head>

  <body>
    <%= render 'shared/top_navbar' %>

    <%= yield %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= render 'shared/navbar' %>
  </body>
</html>
